<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<TabPane fx:id="tabPane" xmlns="http://javafx.com/javafx/8.0.111"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="xyz.hnnknk.deneb.agent.mini.Controller"
         prefHeight="480.0" prefWidth="640.0">
    <Tab fx:id="componentsTab" text="Компоненты компьютера" closable="false">

        <GridPane hgap="25" vgap="15" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TreeView fx:id="tree" minWidth="400">

            </TreeView>

            <Button text="Запуск" onAction="#handleSubmitButtonAction"
                    GridPane.halignment="RIGHT"
                    GridPane.columnIndex="3" GridPane.rowIndex="2"/>

        </GridPane>

    </Tab>
    <Tab fx:id="reportTab" text="Отчеты" closable="false">
    </Tab>
</TabPane>